- content_for :content do
  .dashboard_grid_container
    .widget-box.user-box.register
      .widget-box-heading
        Register
      .widget-box-inner      
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          - devise_error_messages!
          .input-label.grid_2
            Name
          = f.text_field :first_name, :class => "grid_1 name-field first", :placeholder => "first"
          = f.text_field :last_name, :class => "grid_1 name-field last", :placeholder => "last"          
          .breaker
          .input-label.grid_2
            Email
          = f.text_field :email, :class => 'grid_2', :placeholder => 'your email'
          .breaker
          .input-label.grid_2
            Password
          = f.password_field :password, :class => 'grid_2', :placeholder => 'enter a password'
          .breaker
          .input-label.grid_2
            Confirm Password
          = f.password_field :password_confirmation, :class => 'grid_2', :placeholder => 're-enter password'                  
          .breaker
          = f.submit "Register", :class => 'btn heavy-rect action grid_1', :id => 'register-button',
          :disable_with => "Registering"
          .breaker
          .have-account-wrap
            Already have an account?
            =hidden_field_tag 'company_employee_id', params[:company_employee_id]
            =hidden_field_tag 'company_employee_token', params[:company_employee_token]            
            -state_params = {:company_employee_id => params[:company_employee_id], :company_employee_token => params[:company_employee_token]}
            = link_to "Sign In", new_session_path(resource_name, state_params), :class => 'sign-in'
        .clear