@import 'common/common'

.close-button.fancy
  width: 14px
  height: 14px
  margin-top: -10px
  position: absolute
  color: #888
  z-index: 9999
  right: 10px
  top: 19px
  font-size: 15px

.close-button.fancy:hover
  text-decoration: none
  cursor: pointer


.alert-close
  cursor: pointer
  float: right
  margin-top: -6px
  color: #777

.widget-box
  $lr_pad: 10px
  $h_grad_min: #FAFAFA
  $h_grad_max: #EAEAEA
  $inner_bg: #fff
  $border_rad: 5px  
  $border_c: #ccc

  width: 100%
  line-height: 100%
  border: 1px solid $border_c
  @include rounded_corners($border_rad)

  .widget-box-heading
    width: 100%
    text-align: left
    font-weight: bold
    font-size: 18px
    padding: $lr_pad
    border-bottom: 1px solid $border_c
    @include gradient2($h_grad_min, $h_grad_max)
    @include rounded_corners_ext($border_rad, $border_rad, 0px, 0px)

    .btn
      margin-top: -2px

  .btn
    float: right

  ul.widget-box-inner-list
    margin: 0px
    padding: 0px

    li
      padding: 12px $lr_pad
      font-size: 15px
      border-bottom: 1px solid $border_c

      a.btn
        [class^="icon-"],
        [class*=" icon-"]        
          margin-left: 3px

      .place-name
        display: block
        float: left

      .place-address
        font-size: 12px
        font-style: italic

    li:last-child
      border-bottom: none


  .widget-box-inner
    margin: 0px
    padding: 14px
    background: $inner_bg
    @include rounded_corners(inherit)

.time-select-wrap
  select
    width: 70px
    margin: 0px
    height: 26px
    font-size: 13px

  select:last-child
    width: 48px 

.datetime-select-wrap
  select
    width: 70px
    margin: 0px
    height: 26px
    font-size: 13px

  select:last-child
    width: 48px 


.close-popover-link
  color: #D14
  font-size: 10px

.close-popover-link:hover
  text-decoration: underline  
  cursor: pointer

.popover
  .alert, .alert.alert-error.validation-errors
    font-size: 12px
    margin-top: 0px

.card
  background: #f7f7f7
  width: 100%    
  @include basic_shadow(12px)
  @include rounded_corners(6px)
  width: 100%
  min-height: 30px

.content-card
  width: 100%
  min-height: 200px
  background: #fff
  margin: 0px auto 0px auto
  padding: 24px 40px 24px 40px
  @include rounded_corners(4px)
  @include box_shadow(0 0 2px rgba(0, 0, 0, 0.3))  

.sub
  color: #888
  font-size: 12px  

.auto-width
  width: auto !important  

ul.tab-bar
  margin: 16px auto 0px auto  
  height: 38px

  li
    margin: 0px
    float: left

    span, a
      display: block
      padding: 8px 10px
      margin-right: 6px
      font-size: 14px
      color: #0D83DD
      @include rounded_corners(3px)


  li.current, li:hover
    span, a
      background: #cbe7fc
      text-decoration: none

a.tooltip-anchor, a.popover-anchor
  color: inherit
  border-bottom: 1px dotted #666

a.tooltip-anchor:hover, a.popover-anchor:hover
  cursor: pointer
  text-decoration: none

.tooltip-content
  display: none      

.high_120
  height: 120px  

.high_200
  height: 200px  

.breadcrumb.sub
  text-align: left
  background: transparent
  padding: 0px
  font-size: 13px

.inactive
  color: #888
  font-style: italic  

.or
  font-weight: bold  

.table
  input[type='text'], select
    width: 135px
    margin-top: 3px
    margin-right: 10px
    float: left

  select
    margin-top: 0px

  input[type='submit']

i.icon-clear

.delete-link, .delete-link:hover
  color: #D14

.colon-wrap, .field-info
  display: inline-block
  float: left
  position: relative
  margin: 3px 0px 0px 0px

.field-info
  font-size: 12px
  color: #888
  font-style: italic

.dashboard_grid_container
  input.hours,  input.minutes
    margin-right: 5px

  input.minutes  
    margin-left: 5px

  input[type='checkbox'].grid_1
    margin-top: 9px

.swatch
  background-color: #090
  //display: inline
  cursor: pointer
  width: 16px
  height: 16px
  position: relative
  float: left
  margin-right: 6px
  //position: absolute
  //margin-left: 9px   
  //margin-top: 1px
  border: 2px solid #fff
  @include box_shadow(0 0 2px rgba(0, 0, 0, 0.4))
  @include rounded_corners(4px)

.lightbox-bg
  background: #fff
  opacity: .5
  width: 100%
  height: 100%
  position: fixed
  z-index: 1000

.lightbox
  position: fixed !important
  z-index: 3000
  left: 50%
  top: 50%
  border: 1px solid #888
  padding: 14px
  @include rounded_corners(3px)
  background: #fff

.general
  text-align: left
  margin: 12px auto 14px auto  
  width: 100%
  font-size: 14px

.back-button
  display: block
  float: left
  cursor: pointer  

.close-button
  display: block
  position: absolute
  width: 14px
  height: 14px
  top: 5px
  right: 10px
  color: #888
  font-size: 15px

.close-button:hover
  cursor: pointer
  opacity: 1.0
  font-weight: bold

.ss-popover,
body.layout-dashboard .ss-popover,
body.layout_wide .dashboard_grid_container .ss-popover.grid_3
  position: absolute
  z-index: 3000
  border: 1px solid #888
  padding: 14px
  @include rounded_corners(3px)
  background: #fff
  color: #333
  top: 0px
  left: 50%
  display: none

  h4
    margin-bottom: 14px

  .breaker
    height: 7px

  .down-arrow
    bottom: -12px
    top: auto
    left: 50%
    margin-left: -6px

.cal-overlay
  .left-side
    width: 100px
    display: inline

  .right-side
    width: 130px
    display: inline    

#ajax-loading
  display: none
  width: 112px
  height: auto
  border: 1px solid #888
  background: #fff
  @include rounded_corners_ext(0px, 0px, 3px, 3px)
  @include basic_shadow(14px)
  position: fixed
  left: 50%
  margin-left: -56px
  top: -1px
  z-index: 999999
  padding: 3px 0px 2px 0px

  .text-wrap
    font-size: 12px

  img
    margin-left: 6px    

#ajax-loading.abs
  position: absolute    

table.table  thead tr th a
  color: inherit  

.focus-text
  color: #489636  

ul.fields
  width: 320px
  margin: 0px

  li.titled-field
    white-space: nowrap

    .title, .value
      display: inline-block
      text-align: right
      padding: 6px 8px 0px 0px      

    .title
      width: 120px
      font-weight: bold

    .value  
      width: 200px