@import 'common/common'

.auth-option-links
  width: 100%
  margin-top: 10px  
  width: 100%
  float: right
  text-align: right

  a
    display: block
    height: auto
    padding: 6px
    width: auto


.user-box.widget-box
  width: 420px
  margin: 94px auto 0px auto

  .widget-box-inner
    padding-top: 24px    
    padding-bottom: 9px

    .input-label.grid_2
      width: 140px

    input[type='text'], input[type='password']
      width: 178px

    input[type='text'].name-field
      width: 74px

    input[type='text'].name-field.last
      width: 94px
      margin-left: 0px

    input[type='text'].cc-month, input[type='text'].cc-year
      float: left

    input[type='text'].cc-month  
      width: 34px

    input[type='text'].cc-year
      width: 51px
      margin-left: 0px

    input[type='text'].cc-cvc
      width: 50px

    #send-instructions-button
      width: 242px
      margin-right: 41px

    #change-password-submit
      width: 182px
      margin-right: 26px

    .no-account-wrap, .have-account-wrap
      clear: both
      text-align: left
      margin-top: 30px      

    .have-account-wrap
      margin-top: 0px
      padding-left: 2px

.widget-box.user-box.new-session
  .widget-box-inner
    
    .input-label.grid_2
      width: 109px
      margin-left: 11px

    #sign-in-button
      width: 100px
      margin-right: 72px

    a.forgot-password
      float: left
      text-align: left
      color: #888
      font-size: 11px
      margin-left: 202px      



.widget-box.user-box.register, .widget-box.user-box.reset-password
  padding-bottom: 6px

  #register-button
    width: 100px
    margin-right: 42px