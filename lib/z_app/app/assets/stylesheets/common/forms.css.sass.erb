.form-wrap
  margin-top: 12px
  width: 326px

  li
    margin-bottom: 16px
    white-space: nowrap

  li.error
    input
      border: 1px solid #D14

  label, legend.label
    font-weight: bold
    width: 127px
    float: left
    background: transparent
    text-align: right
    color: inherit
    text-shadow: inherit
    padding: 7px 8px 2px 0px
    font-size: 13px

  input[type="number"]
    width: 70px

  legend
    border-bottom: none
    margin-bottom: 0px

  fieldset.choices
    height: auto
    margin: 0px
    padding: 0px

    ol
      display: inline-block
      li
        display: inline-block
        margin: 0px

        label
          width: 108px
          text-align: left
          padding-top: 13px

        input[type="radio"]
          margin-top: 6px

  li.radio, li.checkbox
    padding-left: 0px

  input[type='file']
    height: 30px
    line-height: 19px
    padding-top: 5px

  input[type="submit"]
    float: right

  p.inline-errors
    text-align: right
    color: #D14

.ui-datepicker    
  font-size: 12px