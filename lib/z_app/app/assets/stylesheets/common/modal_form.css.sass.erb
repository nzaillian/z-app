@import 'common/common'

.modal-form
  width: 620px
  height: auto
  position: fixed
  top: 50%
  margin-top: -100px
  left: 50%
  margin-left: -310px
  z-index: 999999
  display: none
  background: #fff
  @include rounded_corners(5px)
  @include box_shadow(0px 1px 7px rgba(0,0,0,.5))
  $border: 1px solid rgba(0,0,0,.3)

  .header
    @include rounded_corners_ext(5px, 5px, 0px, 0px)
    border-bottom: 1px solid #333
    @include gradient_ext(#626262, #454545)
    padding: 5px 10px
    height: 46px
    margin-top: -1px

    h3
      text-align: center
      margin: 0px
      font-size: 18px
      line-height: 38px
      color: #fff

    .btn
      position: absolute
      top: 7px

    .save-button
      right: 10px

    .cancel-button
      left: 10px

  .inner
    padding: 18px
    border-left: $border
    border-right: $border
    border-bottom: $border        

    .input-label
      width: 84px
      float: left
      text-align: right
      padding-top: 3px
      margin-right: 8px
      color: #85898c
      font-weight: bold

    .input-element
      width: auto
      text-align: left

    #availability-date-select
      width: 128px

    input[type="radio"], label
      display: inline-block
    
    label
      margin-right: 14px

    .delete-button
      color: #333
      margin-left: 2px
      font-size: 12px

    .or-go-back

  .alert.alert-error.validation-errors
    margin-bottom: 20px      
    margin-top: 0px


.modal-bg
  background: #000
  opacity: .68
  position: fixed
  width: 100%
  height: 100%
  top: 0px
  left: 0px
  z-index: 9999
  display: none

.modal-form-datepicker
  font-size: 12px  